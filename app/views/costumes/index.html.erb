<div class="container">
  <div class="button-container">
    <h5><button class="add-new-button">
      <%= link_to new_costume_path(@costume), class: "no-underline" do %>
        <%= image_tag("icons8-plus-50.png") %>
        <% end %>
    </button></h5>
  </div>
  <div class="text-center home-banner">
    <h1 class="text-center text-banner"></h1>
  </div>

  <h4 class="recommendations">Our recommendations :</h4>
  <div class="cards">
    <% @costumes.each do |costume| %>
      <a href="<%= costume_path(costume.id)%>" class="card-product">
        <%= cl_image_tag costume.photos.first.key , alt:"costume image", class: "card-image" %>
        <div class="card-info p-3">
          <h6 class="font-weight-bold text-center"><%= costume.name %></h6>
          <p class="text-center"><%= costume.price %>$</p>
        </div>
      </a>
    <% end %>


  </div>
</div>
